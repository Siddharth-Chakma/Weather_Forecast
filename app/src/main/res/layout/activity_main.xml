<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pb_loading"
            android:layout_centerInParent="true"
            android:visibility="gone">

        </ProgressBar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:id="@+id/rl_main_layout">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/cv_toolbar"
                android:elevation="@dimen/s_huge">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rl_toolbar"
                    android:background="@color/black">

                    <androidx.cardview.widget.CardView
                        android:layout_width="312dp"
                        android:layout_height="65dp"
                        android:layout_marginStart="@dimen/s_large"
                        android:layout_marginTop="@dimen/s_large"
                        android:layout_marginEnd="@dimen/s_large"
                        android:layout_marginBottom="@dimen/s_large"
                        app:cardCornerRadius="@dimen/s_large">

                        <EditText
                            android:id="@+id/et_get_city_name"
                            android:layout_width="308dp"
                            android:layout_height="match_parent"
                            android:background="@color/white"

                            android:drawablePadding="@dimen/s_large"
                            android:hint="@string/search_places"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:paddingStart="@dimen/s_large"

                            android:paddingEnd="@dimen/s_large">

                        </EditText>

                    </androidx.cardview.widget.CardView>

                    <ImageButton
                        android:id="@+id/Menu_Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="337dp"
                        android:layout_marginEnd="27dp"
                        ads:srcCompat="@drawable/ic_baseline_menu_24" />

                </RelativeLayout>


            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/rl_sub_layout"
                android:layout_below="@+id/cv_toolbar">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:id="@+id/iv_weather_bg"
                        android:src="@drawable/snow_bg">


                    </ImageView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/s_large"
                        android:layout_marginStart="@dimen/s_huge"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_date_time"

                            android:textColor="@color/black"
                            android:textSize="@dimen/t_large"
                            android:text="@string/demo_date">

                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/s_large"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_day_max_temp"
                                android:layout_weight="3"

                                android:textColor="@color/black"
                                android:textSize="@dimen/t_large"
                                android:text="@string/day">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_day_min_temp"
                                android:layout_weight="1"

                                android:textColor="@color/black"
                                android:textSize="@dimen/t_large"
                                android:text="@string/day">

                            </TextView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/s_large"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_temp"
                                android:layout_weight="1"

                                android:textColor="@color/black"
                                android:textSize="@dimen/t_giant"
                                android:text="@string/main_temp">

                            </TextView>

                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginTop="@dimen/s_large"
                                android:layout_marginEnd="@dimen/s_large"
                                android:id="@+id/tv_weather_icon">


                            </ImageView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/s_large"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_feels_like"
                                android:layout_weight="1"

                                android:textColor="@color/black"
                                android:textSize="@dimen/t_large"
                                android:text="@string/feels_like">

                            </TextView>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_weather_type"
                                android:layout_weight="3"

                                android:textColor="@color/black"
                                android:textSize="@dimen/t_large"
                                android:text="@string/weather_type">

                            </TextView>

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>
                <com.google.android.gms.ads.AdView
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/adView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    ads:adSize="BANNER"
                    ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
                </com.google.android.gms.ads.AdView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/s_huge"
                    android:layout_marginTop="50dp"
                    android:layout_marginRight="@dimen/s_huge"
                    android:layout_marginBottom="@dimen/s_huge"
                    android:elevation="@dimen/s_tiny"
                    app:cardCornerRadius="@dimen/s_large"
                    app:cardMaxElevation="@dimen/s_tiny"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/semiTransparentColor">





                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/ll_main_bg_above"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"

                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/s_tiny"
                                android:id="@+id/rl_pressure_wrapper">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/s_tiny">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/pressure">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tv_pressure"

                                        android:textSize="@dimen/t_huge"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:text="@string/default_numbers">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:textSize="@dimen/t_medium"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:text="@string/pressure">

                                    </TextView>


                                </LinearLayout>


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/s_tiny"
                                android:id="@+id/rl_humidity_wrapper">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/s_tiny">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/pressure">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tv_humidity"

                                        android:textSize="@dimen/t_huge"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:text="@string/default_numbers">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:textSize="@dimen/t_medium"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:text="@string/humidity">

                                    </TextView>


                                </LinearLayout>


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/s_tiny"
                                android:id="@+id/rl_wind_speed_wrapper">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/s_tiny">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/pressure">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tv_wind_speed"

                                        android:textSize="@dimen/t_huge"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:text="@string/default_numbers">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:textSize="@dimen/t_medium"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:text="@string/wind_speed">

                                    </TextView>


                                </LinearLayout>


                            </RelativeLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/ll_main_bg_below"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"

                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/s_tiny"
                                android:id="@+id/rl_sunrise_wrapper">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/s_tiny">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/pressure">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tv_sunrise"

                                        android:textSize="@dimen/t_huge"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:text="@string/default_numbers">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:textSize="@dimen/t_medium"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:text="@string/pressure">

                                    </TextView>


                                </LinearLayout>


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/s_tiny"
                                android:id="@+id/rl_sunset_wrapper">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/s_tiny">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/pressure">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tv_sunset"

                                        android:textSize="@dimen/t_huge"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:text="@string/default_numbers">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:textSize="@dimen/t_medium"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:text="@string/humidity">

                                    </TextView>


                                </LinearLayout>


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="@dimen/s_tiny"
                                android:id="@+id/rl_temp_fahrenheit_wrapper">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical"
                                    android:padding="@dimen/s_tiny">

                                    <ImageView
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center_horizontal"
                                        android:src="@drawable/pressure">

                                    </ImageView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/tv_temp_fahrenheit"

                                        android:textSize="@dimen/t_huge"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:text="@string/default_numbers">

                                    </TextView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"

                                        android:textSize="@dimen/t_medium"
                                        android:gravity="center"
                                        android:textColor="@color/black"
                                        android:text="@string/wind_speed">

                                    </TextView>


                                </LinearLayout>


                            </RelativeLayout>
                        </LinearLayout>

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>


            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>
</layout>